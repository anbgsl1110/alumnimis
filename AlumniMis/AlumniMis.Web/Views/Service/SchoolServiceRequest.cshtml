<script type="text/javascript">
    /*导航切换*/
    $(function($) {
        $("#alumni_navbar4").addClass("nav-current");
        $(".second-menu").hide();
    });
    /*校友服务请求确认*/
    $('#SchoolServiceRequest_Save').click(function() {
        var schoolServiceRequest = {
            Sname: $("#schoolServiceRequest_Sname").val(),
            Sres: $("#schoolServiceRequest_Sres").val(),
            Stel: $("#schoolServiceRequest_Stel").val(),
            SserviceDate: $("#schoolServiceRequest_SserviceDate").val(),
            ScreateTime: $("#schoolServiceRequest_ScreateTime").val(),
            Sreason: $("#schoolServiceRequest_Sreason").val()
        }
        var ajax = {
            url: "/Service/SaveRequestSchoolService",
            data: JSON.stringify(schoolServiceRequest),
            type: 'Post',
            dataType: 'json',
            contentType: "application/json;charset=utf-8",
            cache: false,
            success: function () {
                alert('请求申请确认成功');
                window.location.href = '/News/HomePage';
            },
            error: function () {
                alert('确认服务申请失败,请查看网络状态');
                return;
            }
        }
        $.ajax(ajax);
    });
</script>
