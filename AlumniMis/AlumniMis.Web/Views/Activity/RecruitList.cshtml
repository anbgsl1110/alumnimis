
@{
    ViewBag.Title = "校友招聘";
}

<style>
    .recruit-list{
        height:193px;
        margin:10px;
        border:1px solid #ccc;
    }
    .recruit-detail{
        width:100%;
        height:24px;
        border-bottom:1px dashed  #ccc;
        line-height:24px;
        padding:0 5px;
        cursor:pointer;
        position:relative;
    }
    .recruit-detail .delete-item {
        position: absolute;
        right: 2px;
        top: -1px;
        cursor: pointer;
        z-index: 9999;

    }
    .recruit-detail div{
        float:left;

    }
    .recruit-detail  .recruit-tit{
        width:60%;
        overflow:hidden;
        white-space:nowrap;
        text-overflow:ellipsis;
        text-align:center;
    }
    .recruit-detail .recruit-aut{
        width:20%;
        text-align:center;
    }
    .recruit-detail .recruit-time{
        float:right;
        width:20%;
        text-align:center;
    }
</style>

<div class="">
    您的位置：<a href="/Activity/ActivityList" class="user-address">校友天地</a> <em>&#62</em> 校友招聘
</div>
<div class="recruit-list">
    <div class="recruit-detail" >
        <div class="recruit-tit">招聘标题</div><div class="recruit-aut">发布者</div>
        <div class="recruit-time">发布时间</div>
    </div>
    <div class="recruit-detail" onclick="window.location.href= '/Activity/RecruitDetail';return false">
        <div class="recruit-tit">淘宝网站招聘</div><div class="recruit-aut">13级校友</div>
        <div class="recruit-time">2017-5-13</div>
        <!--只有管理员才能看到这个删除按钮，删除这条信息-->
        <div class="delete-item"><img src="~/Content/images/icon_delete_1.png"/></div>
    </div>
</div>

<script>
    /*导航切换*/
    $(function($) {
        $("#alumni_navbar3").addClass("nav-current");
        $(".second-menu").hide();
    });
    /*删除这条信息*/
    $(".delete-item").bind("click",
        function(event) {
            event.stopPropagation();
            $(this).parent().remove();

        });
</script>